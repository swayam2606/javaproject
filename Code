    timerLabel.setFont(new Font("Serif", Font.BOLD, 20));
    timerLabel.setForeground(Color.WHITE);
    add(timerLabel);

    // Start Timer
    timer = new Timer(1000, new ActionListener() {
        public void actionPerformed(ActionEvent e) {
            timeRemaining--;
            timerLabel.setText("Time Remaining: " + timeRemaining + " seconds");

            if (timeRemaining == 0) {
                timer.stop();
                setBackground(Color.black);
                JOptionPane.showMessageDialog(null, "Time's up!");
                timerLabel.setForeground(Color.WHITE);

                submitButton.doClick();
            }
        }
    });
    timer.start();













        setLayout(null);
        setVisible(true);


     





    }






    public void actionPerformed(ActionEvent e) {
        
        
        int score = 0;


        if (q1Option2.isSelected()) {
            score++;
        }

        if (q2Option3.isSelected()) {
            score++;
        }

        if (q3Option2.isSelected()) {
            score++;
        }

        if (q4Option3.isSelected()) {
            score++;
        }

        if (q5Option4.isSelected()) {
            score++;
        }


        // Create result frame
        JFrame resultFrame = new JFrame();
        resultFrame.setTitle("Quiz Result & correct answers");;
        resultFrame.getContentPane().setBackground(Color.black);
        resultFrame.setSize(400, 475);
        resultFrame.setLocationRelativeTo(null);



















        JLabel resultLabel = new JLabel("You scored in Java Quiz is: " + score + "/5");
        resultLabel.setForeground(Color.orange);
        resultLabel.setBounds(100, 10 , 200, 30);
        resultFrame.add(resultLabel);

        JLabel answers1 = new JLabel("Question 1:  Who invented Java Programming?");
