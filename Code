        usernameLabel.setForeground(Color.WHITE);
        loginFrame.add(usernameLabel);

        JTextField usernameField = new JTextField();
        

// Calculate the position of the username and password fields relative to the center
int fieldX = centerX - 50;
int usernameY = centerY - 20;
int passwordY = centerY + 10;

usernameField.setBounds(fieldX, usernameY, 100, 20);

        usernameField.setForeground(Color.black);
